<?xml version="1.0" encoding="UTF-8"?>
<manifest android:installLocation="auto" android:versionCode="15300"
    android:versionName="1.5.3.0" package="com.silentlexx.instead" xmlns:android="http://schemas.android.com/apk/res/android">
    <application android:debuggable="false" android:enabled="true"
        android:hardwareAccelerated="true" android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:icon="@drawable/icon"
            android:label="@string/app_name" android:name=".MainMenu" android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SDLActivity" android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".GameMananger" android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".Options" android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".AboutGame" android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name=".IntentLauncher" android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="file"/>
                <data android:mimeType="*/*"/>
                <data android:pathPattern=".*\\.idf"/>
                <data android:pathPattern=".*\\.qm"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="file"/>
                <data android:mimeType="application/zip"/>
            </intent-filter>
        </activity>
        <receiver android:icon="@drawable/icon"
            android:label="@string/add_widget" android:name=".GameIcon">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_info"/>
        </receiver>
        <activity android:name=".GameChooser" android:theme="@android:style/Theme.Translucent">
           <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <receiver android:name=".IconReceiver" android:enabled="false"/>
    </application>
    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="15"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
</manifest>
