<?xml version="1.0" encoding="UTF-8"?>
<manifest android:installLocation="auto" android:versionCode="1529"
    android:versionName="1.5.2.9" package="com.silentlexx.instead" xmlns:android="http://schemas.android.com/apk/res/android">
    <application android:debuggable="false" android:enabled="true"
        android:hardwareAccelerated="true" android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:icon="@drawable/icon"
            android:label="@string/app_name" android:name=".MainMenu" android:theme="@android:style/Theme.NoTitleBar" android:description="@android:style/Theme.NoTitleBar" android:configChanges="keyboard|keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SDLActivity" android:configChanges="keyboard|keyboardHidden|orientation"/>
        <activity android:name=".GameMananger" android:theme="@android:style/Theme.NoTitleBar" android:configChanges="keyboard|keyboardHidden|orientation"/>
        <activity android:name=".Options" android:theme="@android:style/Theme.NoTitleBar" android:configChanges="keyboard|keyboardHidden|orientation"/>
        <activity android:name=".AboutGame" android:theme="@android:style/Theme.NoTitleBar" android:configChanges="keyboard|keyboardHidden|orientation"/>
        <activity android:name=".IdfLauncher" android:theme="@android:style/Theme.NoTitleBar" android:configChanges="keyboard|keyboardHidden|orientation">
              <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="file" />
                <data android:host="*" />
                <data android:mimeType="*/*" />
                <data android:pathPattern=".*\\.idf" />
            </intent-filter>
    	</activity>        
    </application>
    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="8"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
</manifest>
