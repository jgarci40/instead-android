
<LinearLayout android:id="@+id/Linear10"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

	<RelativeLayout android:id="@+id/Linear11"
		android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/bgstripe">


		<ImageView android:adjustViewBounds="true" android:id="@+id/logo"
			android:layout_height="40dip" android:scaleType="fitCenter"
			android:layout_width="wrap_content" android:layout_marginBottom="1dip"
			android:layout_marginTop="1dip" android:src="@drawable/menu"
			android:layout_alignParentLeft="true" android:layout_alignParentTop="true"></ImageView>


		<TextView android:id="@+id/tv" android:layout_width="wrap_content"
			android:textSize="24sp" android:gravity="center" android:layout_marginLeft="5dip"
			android:shadowDx="1" android:shadowDy="1" android:shadowRadius="2"
			android:text="@string/menu" android:layout_toRightOf="@+id/logo"
			android:layout_height="wrap_content" android:layout_centerVertical="true" android:shadowColor="#000000" android:textColor="#FFFFFF"></TextView>
	</RelativeLayout>

</LinearLayout>