<LinearLayout android:id="@+id/Linear01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="@drawable/wallpaper">


	<ScrollView android:id="@+id/ScrollView01"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_marginBottom="60dip">
		<LinearLayout android:id="@+id/llb" android:layout_width="fill_parent"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:gravity="center"
			android:layout_height="fill_parent">

			<LinearLayout android:id="@+id/Linear09"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal" android:layout_gravity="center"
				android:background="#CCCCCC" android:layout_marginBottom="15dip">

				<ImageView android:src="@drawable/options"
					android:adjustViewBounds="true" android:id="@+id/logo"
					android:layout_height="40dip" android:scaleType="fitCenter"
					android:layout_width="wrap_content" android:layout_marginBottom="1dip"
					android:layout_marginTop="1dip"></ImageView>


				<TextView android:id="@+id/tv" android:layout_width="wrap_content"
					android:text="@string/options" android:textSize="24sp"
					android:gravity="center" android:textColor="#000000"
					android:shadowColor="#FFFFFF" android:layout_height="fill_parent"
					android:layout_marginLeft="5dip" android:shadowDx="1"
					android:shadowDy="1" android:shadowRadius="2"></TextView>
			</LinearLayout>


			<TableLayout android:id="@+id/Linear03"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:orientation="horizontal">

				<TableRow android:gravity="center"android:layout_marginBottom="20dip">
					<CheckBox android:text="@string/music" android:id="@+id/music"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textSize="25sp"></CheckBox>
				</TableRow>
				<TableRow android:gravity="center" android:layout_marginBottom="20dip">
					<CheckBox android:text="@string/click" android:id="@+id/click"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textSize="25sp"></CheckBox>


				</TableRow>
				<TableRow android:gravity="center"android:layout_marginBottom="20dip">
					<CheckBox android:text="@string/ourtheme" android:id="@+id/ourtheme"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:textSize="25sp"></CheckBox>


				</TableRow>
				<TableRow android:gravity="center">
					<Button android:text="@string/fontsize"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:id="@+id/sfont" android:textSize="20sp"></Button>


				</TableRow>


				<TableRow android:layout_margin="5dip"
					android:layout_height="wrap_content" android:gravity="center">
					<TextView android:id="@+id/hlpopt" android:text="@string/hlpopt"
						android:textSize="15sp" android:textColor="#CCCCCC"
						android:layout_height="wrap_content" android:layout_width="wrap_content" android:gravity="center"></TextView>
				</TableRow>
			</TableLayout>



		</LinearLayout>



	</ScrollView>
	<LinearLayout android:background="#CCCCCC" android:id="@+id/LinearLayout11"
		android:layout_width="fill_parent" android:layout_gravity="center"
		android:layout_marginTop="-60dip" android:gravity="center"
		android:layout_height="fill_parent">

		<Button android:drawableLeft="@drawable/save" android:text="@string/save"
			android:id="@+id/save" android:textSize="20sp"
			android:layout_marginRight="20dip" android:layout_height="fill_parent"
			android:layout_width="150dip"></Button>
		<Button android:drawableLeft="@drawable/cancel" android:text="@string/cancel"
			android:id="@+id/cancel" android:textSize="20sp"
			android:layout_height="fill_parent" android:layout_width="150dip"></Button>

	</LinearLayout>

</LinearLayout>